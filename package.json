{
  "name": "pa_test_generator",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-clean": "rmdir /s /q node_modules\\.cache 2>nul & electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },

  "build": {
    "appId": "com.example.pa-test-generator",
    "productName": "PA Test Generator",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!python/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32"]
        }
      ],
      "sign": false,
      "signingHashAlgorithms": []
    },
    "forceCodeSigning": false
  }
}
